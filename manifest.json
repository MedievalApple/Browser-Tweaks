{
    "name": "Medieval Apple's Browser Tweaks",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Small Improvments To The Internet",
    "icons": {
        "128": "icons/icon.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
              "<all_urls>"
            ],
            "js": ["content-scripts/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
        "resources": ["images/*.webp"],
        "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "scripts": ["background/background.js"],
        "type": "module"
      },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking"
      ]
}